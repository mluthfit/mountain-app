<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidPemulaSubmission" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="CommonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CommonLayout.InfoDetailContainer">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CommonLayout.AboutContainer">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CommonLayout.Detail">
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CommonLayout.TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CommonLayout.TextTitle.MyName">
        <item name="android:gravity">center</item>
    </style>
    <style name="CommonLayout.TextLocation">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="CommonLayout.TextLocation.CenterGap">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CommonLayout.ButtonDetail">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CommonLayout.DetailButtonContainer">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="CommonLayout.Table">
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="CommonLayout.Table2">
        <item name="android:layout_marginTop">30dp</item>
    </style>
    <style name="CommonLayout.Table2.Description">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="FullLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="FullLayout.Detail">
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="PhotoProfile">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="RecyclerViewImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="DetailItemImage">
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:scaleGravity">center</item>
    </style>
    <style name="ButtonDetailContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="RecyclerViewContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="DetailButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="DetailButton.Left">
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="DetailButton.Right">
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="Table">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Table.TextLabel">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="Table.TextValue">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Table.TextValue.Detail">
        <item name="android:layout_marginLeft">20dp</item>
    </style>
</resources>